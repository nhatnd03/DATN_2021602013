<body>
    <div class="all-content">

        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-light" id="navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home"  id="logo"><img src="~/Images/logo.png" alt="Logo"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="Index" asp-controller="Home">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="About" >Về chúng tôi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Shop">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Contact">Liên hệ</a>
                        </li>
                        <!-- Dropdown for user profile -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-fill"></i> Tài khoản
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @if (Id > 0)
                                {
                                    <li><a class="dropdown-item" asp-controller="AccountDetails" asp-action="Index">Cá nhân</a></li>
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="Index">Lịch sử mua hàng</a></li>
                                    @if (Role != 1)
                                    {
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">Quản lý</a></li>
                                    }
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Đăng xuất</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Đăng nhập</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                                }
                            </ul>
                        </li>
                        <!-- Giỏ hàng -->
                        @if (Id > 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Cart")">
                                    <i class="fa-solid fa-cart-shopping"></i> Giỏ hàng
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="#" onclick="alert('Đăng nhập để sử dụng tính năng này!')">
                                    <i class="fa-solid fa-cart-shopping"></i> Giỏ hàng
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <!-- navbar -->
     @RenderBody();



         
